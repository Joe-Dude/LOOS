<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LOS.online</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body, html {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }
        
        #browserFrame {
            width: 100%;
            height: 100%;
            border: none;
            display: block;
        }
        
        .loading {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-family: Arial, sans-serif;
            color: #333;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <div class="loading" id="loading">Loading...</div>
    <iframe 
        id="browserFrame"
        src="https://browser.lol"
        sandbox="allow-same-origin allow-scripts allow-popups allow-forms allow-modals allow-pointer-lock"
        allow="accelerometer; camera; encrypted-media; geolocation; gyroscope; microphone; midi; clipboard-read; clipboard-write"
        referrerpolicy="no-referrer"
        style="display: none;">
    </iframe>

    <script>
        const iframe = document.getElementById('browserFrame');
        const loading = document.getElementById('loading');
        
        // Show iframe once loaded
        iframe.onload = function() {
            loading.style.display = 'none';
            iframe.style.display = 'block';
        };
        
        // Handle load errors
        iframe.onerror = function() {
            loading.textContent = 'Failed to load. Site may block iframe embedding.';
        };
        
        // Attempt to modify document title
        document.title = 'LOS.online';
        
        // Try to handle fullscreen requests from iframe
        document.addEventListener('fullscreenchange', function() {
            if (document.fullscreenElement) {
                console.log('Fullscreen activated');
            }
        });
    </script>
</body>
</html>
